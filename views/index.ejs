<!doctype html>
<html>
  <head>
    <title>Vote</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
    </style>
  </head>
  <body>
    <!-- ログインフォーム -->
    <form id="loginForm">
      <div>
        <input id="username" name="username" type="text" class="form-control" placeholder="ユーザ名" autofocus />
        <button id="btnLogin">ログイン</button>
      </div>
    </form>
    <!-- content -->
    <div id="content" style="display: none;">
      <div id="page-top">
        <ul id="elections">
        <% for (let item of items) { %>
            <!-- <li><%- item.name %></li> -->
          <li class="select-item" data-id="<%- item.id %>">
            <h3><%- item.name %></h3>
            <p class="description"><%- item.description %></p>
            <p class="term"><%- moment(item.open).format('YYYY-MM-DD HH:mm:ss') %>〜<%- moment(item.close).format('YYYY-MM-DD HH:mm:ss') %></p>
          </li>
        <% } %>
        </ul>
      </div>
      <div id="page-election" style="display: none">
        <div>
          <p class="to-top">← TOP</p>
          <h2 class="name"></h2>
          <p class="description"></p>
          <div><span class="open"></span>〜<span class="close"></span></div>
        </div>
        <ul id="subjects"></ul>
      </div>
      
      <ul id="messages"></ul>
      <form id="chat" action="">
        <input id="m" autocomplete="off" /><button>投稿</button>
      </form>
    </div>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
  <script src="https://momentjs.com/downloads/moment.min.js"></script>
  <script>
        
    $(function () {
      var socket = io();
      // ログイン画面表示
      $('#loginForm').show();
      $('#content').hide();

      var pageSwitch = function() {
        $('#page-top').toggle();
        $('#page-election').toggle();
      }

      // ログイン処理
      $('#loginForm').on('submit', function (e) {
        userName = $('#username').val();
        if (userName) {
          // チャット画面表示
          $('#loginForm').hide();
          $('#content').show();
          // ユーザ情報をサーバへ通知する
          socket.emit('login', {
            userID: socket.id,
            userName: userName
          });
        }
        e.preventDefault();
      });

      $('.select-item').click(function() {
        var id = $(this).data('id');
        $.ajax({
          async: false,
            url: '/election/' + id,
            type: 'get',
            // data:{"name": "musa"},
            dataType: 'json'
          }).done(function(res){
            pageSwitch();
            elm = $('#page-election');
            elm.find('.name').html(res.election.name)
            elm.find('.description').html(res.election.description)
            elm.find('.open').html(moment(res.election.open).format('YYYY-MM-DD HH:mm:ss'))
            elm.find('.close').html(moment(res.election.close).format('YYYY-MM-DD HH:mm:ss'))

            subjects = elm.find('#subjects');
            res.subjects.forEach(function(val, index){
              subjects.append('<li id="subject-'+ val.id +'"><h3>'+val.name+'<span class="voted">'+ val.voted +'</span></h3></li>');
              console.log(val,index);
            });
           console.debug(res);
          }).fail(function(xhr, status, error){
               alert(status);
          });
      });

      $('.to-top').click(function(){
        pageSwitch();
      })

      $('form#chat').submit(function(){
        socket.emit('chat message', $('#m').val());
        $('#m').val('');
        return false;
      });
      socket.on('chat message', function(msg){
        $('#messages').append($('<li>').text(msg.userName + ': ' + msg.message));
      });
      socket.on('new user', function(msg){
        $('#messages').append($('<li>').text(msg));
      });
    });
  </script>
  </body>
</html>
